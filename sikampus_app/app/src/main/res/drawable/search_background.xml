<!-- res/drawable/search_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners android:radius="16dp"/>
            <padding android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp"/>
        </shape>
    </item>

    <!-- Shadow -->
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#33B8B8B8"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
</layer-list>
